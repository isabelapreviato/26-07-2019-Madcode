<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@drawable/gradient">

    <TextView
            android:text="IAI LETS DIRIGIR TODAY BRO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txvRide" android:textSize="20sp"
            android:textStyle="bold" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/imgChave"
            app:layout_constraintEnd_toEndOf="@+id/imgChave" app:layout_constraintStart_toStartOf="@+id/imgChave"
            android:textColor="@android:color/white"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edtNome"
            android:hint="Qual seu nome parcero?" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/txvRide"
            android:textColorHint="@android:color/white" android:textColor="@android:color/white"
            android:textColorLink="@android:color/white" android:textColorHighlight="@android:color/white"
            android:fontFamily="monospace" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="70dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="70dp"/>
    <Button
            android:text="LET'S"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnLets" android:textColor="@android:color/white"
            android:backgroundTint="#ef3e35" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/edtNome"
            app:layout_constraintEnd_toEndOf="@+id/edtNome" app:layout_constraintStart_toStartOf="@+id/edtNome"
            android:layout_marginEnd="20dp" android:layout_marginStart="20dp"/>
    <ImageView
            android:layout_width="132dp"
            android:layout_height="147dp"
            app:srcCompat="@drawable/iconechave"
            android:id="@+id/imgChave" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="180dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="100dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="100dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>