<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ResultadoActivity"
        android:background="@drawable/gradient">

    <TextView
            android:text="A L O H A  fulano de tal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txvAloha" android:textSize="30sp"
            android:textStyle="bold" android:textColor="@android:color/white" android:layout_marginTop="190dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="140dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="140dp"/>
    <TextView
            android:text="Qual tua idade?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txvIdade" android:textSize="20sp"
            android:layout_marginTop="30dp" app:layout_constraintTop_toBottomOf="@+id/txvAloha"
            app:layout_constraintEnd_toEndOf="@+id/txvAloha" app:layout_constraintStart_toStartOf="@+id/txvAloha"
            android:textColor="@android:color/white" android:fontFamily="monospace"/>
    <Spinner
            android:layout_width="0dp"
            android:layout_height="41dp"
            android:id="@+id/spnIdades" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/txvIdade" android:layout_marginEnd="40dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp" android:background="@android:color/white"/>
    <Button
            android:text="Clique Aqui e ganhe 1milhÃ£o"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnClique" android:textColor="@android:color/white"
            android:background="#ef3e35" android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/spnIdades"
            app:layout_constraintEnd_toEndOf="@+id/spnIdades"
            app:layout_constraintStart_toStartOf="@+id/spnIdades" android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"/>
    <TextView
            android:text="Resultado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txvResultado" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="146dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnClique"
            android:textColor="@android:color/white"
            app:layout_constraintVertical_bias="0.427" android:layout_marginTop="20dp" android:textSize="30sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>